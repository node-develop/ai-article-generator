# ── Dokploy deployment ─────────────────────────────
# Domain for the application (Traefik routing)
APP_DOMAIN=articleforge.example.com

# ── Database ──────────────────────────────────────
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change-me-in-production
POSTGRES_DB=articleforge
# For local dev (overridden in docker-compose for containers)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/articleforge

# ── Redis ─────────────────────────────────────────
REDIS_URL=redis://localhost:6379

# ── Auth ──────────────────────────────────────────
BETTER_AUTH_SECRET=change-this-to-a-random-32-char-string
BETTER_AUTH_URL=http://localhost:4000

# ── AI Providers ──────────────────────────────────
OPEN_ROUTER_API_KEY=sk-or-v1-...
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
PERPLEXITY_API_KEY=pplx-...

# ── Image generation (Google Imagen) ──────────────
GOOGLE_CLOUD_PROJECT=
GOOGLE_CLOUD_CREDENTIALS=./service-account.json

# ── Observability (LangSmith) ─────────────────────
LANGSMITH_API_KEY=ls-...
LANGSMITH_PROJECT=articleforge
LANGSMITH_TRACING=true

# ── App ───────────────────────────────────────────
API_PORT=4000
NODE_ENV=development
