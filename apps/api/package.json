{
  "name": "@articleforge/api",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc -b",
    "start": "node dist/server.js",
    "worker": "tsx src/worker.ts",
    "worker:dev": "tsx watch src/worker.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx src/db/seed.ts",
    "ingest": "tsx src/ingestion/cli.ts --mode=full",
    "ingest:add": "tsx src/ingestion/cli.ts --mode=add",
    "ingest:reindex": "tsx src/ingestion/cli.ts --mode=reindex",
    "ingest:stats": "tsx src/ingestion/cli.ts --mode=stats"
  },
  "dependencies": {
    "@articleforge/shared": "*",
    "@hono/node-server": "^1.13.8",
    "@hono/node-ws": "^1.1.0",
    "@langchain/anthropic": "^0.3.0",
    "@langchain/core": "^0.3.0",
    "@langchain/langgraph": "^0.2.0",
    "@langchain/langgraph-checkpoint-postgres": "^0.0.4",
    "@langchain/openai": "^0.3.0",
    "@langchain/textsplitters": "^0.1.0",
    "better-auth": "^1.2.0",
    "bullmq": "^5.0.0",
    "dotenv": "^16.4.0",
    "drizzle-orm": "^0.36.0",
    "hono": "^4.6.0",
    "ioredis": "^5.4.0",
    "pg": "^8.13.0",
    "postgres": "^3.4.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/pg": "^8.11.0",
    "drizzle-kit": "^0.28.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0"
  }
}
